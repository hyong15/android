<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/remote_list_selector" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp" >

        <TextView
            android:id="@+id/videodate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:text="15:16:13"
            android:textColor="@color/listtextcolor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/videodisk"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/videodownload"
            android:gravity="center_horizontal"
            android:text="F"
            android:textColor="@color/listtextcolor"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/videodownload"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/download" />
    </RelativeLayout>

</RelativeLayout>